extends ../shared/template

block content
  h5 Notes


  .row
    .small-12.columns
          .show.fieldset
            .title=note.title
            .tags= 'Tags: ' + note.tags.join(', ')
            .date= moment(note.dateCreated).format('MMMM Do, YYYY')
            .body= note.body

      form(action='/notes/'+note._id.toString(), method='post')
        fieldset
            input(type='hidden', name='_method', value='delete')
            button.tiny.alert.red x
