extends ../shared/template

block content
  h5 What's on your mind?

    .row
      .small-12.columns
        form(action='/notes', method='post', enctype='multipart/form-data')
          fieldset.fieldset
            .row
              .small-12.columns
                label Title
                input(type='text', name='title', required)
                label Note
                textarea(type='textarea', name='body', required)
            .row
              .small-4.columns
                label Tags
                input(type='text', name='tags', required)
              .small-4.columns
                label Date
                input(type='date', name='dateTaken', required)
              .small-4.columns#save-note
                label &nbsp
                button.tiny.radius.expand Save Note
