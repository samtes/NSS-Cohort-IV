extends ../shared/template

block content
    .row 
      .small-12.small-centered.columns
        h1=title
    .row#wrapper
      .small-2.columns
         .showLogin Login
        .small-8.columns
        .small-2.columns
          .showRegister Register
    .row
      .small-10.columns#log.hide
        form(action='/login/', method='post', enctype='multipart/form-data')
          fieldset
            label Email
            input(type='email', name='email', required)
            label Password
            input(type='password', name='password', required)
            .row
              .small-12.columns#login
                label &nbsp
                button.tiny.radius.expand Login
    .row
      .small-10.columns#reg.hide
        form(action='/register/', method='post', enctype='multipart/form-data')
          fieldset
            label Email
            input(type='email', name='email', required)
            label Password
            input(type='password', name='password', required)
            .row
              .small-12.columns#register
                label &nbsp
                button.tiny.radius.expand  Register



    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')

