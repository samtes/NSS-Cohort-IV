doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-4.columns
       label &nbsp
       label &nbsp
       a#new(href='/albums/new') New Album
      .small-8.columns
    .row
      .small-12.columns
        h1=title
      .row
        .small-12.columns#test
          each album in albums
            .album
              .cover(style='background-image:url("'+album.cover+'")')
              .title: a(href='/albums/' + album._id)= album.title
              .taken= moment(album.taken).format('MMMM Do, YYYY')


    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')

