doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body(style='background-image:url("'+album.cover+'")')
    .row
      .small-2.columns
       label &nbsp
       label &nbsp
       a#new(href='/') Home
      .small-4.columns
       label &nbsp
       label &nbsp
       a#new(href='/albums/new') New Album
      .small-8.columns

    .row
      .small-12.columns
        h1=title + ' : ' + moment(album.taken).format('MMMM Do, YYYY')
    .row
      .small-6.columns
        form(action='/albums', method='post', enctype='multipart/form-data')
          fieldset
            legend
            .row
              .small-12.columns
                label &nbsp
                input#imgFile(type='file' name='pic')
            .row
              .small-12.columns
                button#addImage.tiny.radius.alert Add image

      .row
        .small-12.columns
          each pic in album.photos
            .album(style='background-image:url("'+pic+'")')

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')

